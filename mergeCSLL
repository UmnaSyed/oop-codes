#include <iostream>
using namespace std;

struct Node {
    int data;
    Node* next;
    Node(int d): data(d), next(NULL) {}
};

void insertEnd(Node*& head, int val) {
    Node* n = new Node(val);
    if (!head) { head = n; head->next = head; return; }

    Node* t = head;
    while (t->next != head)
        t = t->next;

    t->next = n;
    n->next = head;
}

void breakCircle(Node*& head) {
    Node* t = head;
    while (t->next != head)
        t = t->next;
    t->next = NULL;  
}

void makeCircle(Node*& head) {
    Node* t = head;
    while (t->next)
        t = t->next;
    t->next = head;
}

Node* mergeCSLL(Node* a, Node* b) {
    if (!a) return b;
    if (!b) return a;

    if (a->data <= b->data) {
        a->next = mergeCSLL(a->next, b);
        return a;
    } else {
        b->next = mergeCSLL(a, b->next);
        return b;
    }
}

void splitCSLL(Node* head, Node*& a, Node*& b) {
    Node* slow = head;
    Node* fast = head->next;

    while (fast && fast->next) {
        slow = slow->next;
        fast = fast->next->next;
    }

    a = head;
    b = slow->next;
    slow->next = NULL;
}

void mergeSortCSLL(Node*& head) {
    if (!head || head->next == head) return;

    breakCircle(head);

    Node *a, *b;
    splitCSLL(head, a, b);

    mergeSortCSLL(a);
    mergeSortCSLL(b);

    head = mergeCSLL(a, b);

    makeCircle(head);
}

void printCSLL(Node* head) {
    Node* t = head;
    do {
        cout << t->data << " ";
        t = t->next;
    } while (t != head);
    cout << endl;
}

int main() {
    Node* head = NULL;
    insertEnd(head, 7);
    insertEnd(head, 2);
    insertEnd(head, 9);
    insertEnd(head, 1);

    cout << "CSLL Before: ";
    printCSLL(head);

    mergeSortCSLL(head);

    cout << "CSLL After: ";
    printCSLL(head);
}
