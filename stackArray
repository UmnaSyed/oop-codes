#include <iostream>
using namespace std;

class Stack {
private:
    int arr[100];   // fixed size array
    int top;        // index of top element
    int size;       // maximum capacity

public:
    Stack(int s = 100) {  // constructor
        size = s;
        top = -1;          // stack is empty
    }

    void push(int value) {
        if (top == size - 1) {
            cout << "Stack Overflow! Cannot push " << value << endl;
            return;
        }
        arr[++top] = value;  // increment top and insert
    }

    void pop() {
        if (top == -1) {
            cout << "Stack Underflow! Nothing to pop." << endl;
            return;
        }
        cout << "Popped: " << arr[top--] << endl; // remove top element
    }

    int peek() {
        if (top == -1) {
            cout << "Stack is empty!" << endl;
            return -1;
        }
        return arr[top];
    }

    bool isEmpty() {
        return (top == -1);
    }

    void display() {
        if (isEmpty()) {
            cout << "Stack is empty!" << endl;
            return;
        }
        cout << "Stack elements (top to bottom): ";
        for (int i = top; i >= 0; i--)
            cout << arr[i] << " ";
        cout << endl;
    }
};

int main() {
    Stack s(5);   // create stack of size 5

    s.push(10);
    s.push(20);
    s.push(30);
    s.display();

    s.pop();
    s.display();

    cout << "Top element is: " << s.peek() << endl;

    return 0;
}
