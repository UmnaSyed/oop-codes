#include <iostream>
using namespace std;

int main() {
    int rows;
    cout << "Enter number of rows: ";
    cin >> rows;

    // Step 1: Create an array of int* (each will point to a row)
    int** jagged = new int*[rows];

    // Step 2: Take input for number of columns in each row
    int* cols = new int[rows];  // to store column sizes for each row
    for (int i = 0; i < rows; i++) {
        cout << "Enter number of columns for row " << i << ": ";
        cin >> cols[i];
        jagged[i] = new int[cols[i]];  // allocate memory for that row
    }

    // Step 3: Fill the jagged array
    cout << "\nEnter elements:\n";
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols[i]; j++) {
            cout << "Row " << i << " Col " << j << ": ";
            cin >> jagged[i][j];
        }
    }

    // Step 4: Display the jagged array
    cout << "\nJagged Array:\n";
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols[i]; j++) {
            cout << jagged[i][j] << " ";
        }
        cout << endl;
    }

    // Step 5: Free memory
    for (int i = 0; i < rows; i++) {
        delete[] jagged[i]; // delete each row
    }
    delete[] jagged;
    delete[] cols;

    return 0;
}
